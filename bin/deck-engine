#!/usr/bin/env node

/**
 * PipesNow DeckEngine V2 CLI
 * ğŸ® Interface de linha de comando para gerenciar pipelines V2
 */

const DeckEngine = require("../index");
const fs = require("fs");
const path = require("path");

// Cores para terminal
const colors = {
  reset: "\x1b[0m",
  bright: "\x1b[1m",
  green: "\x1b[32m",
  red: "\x1b[31m",
  yellow: "\x1b[33m",
  blue: "\x1b[34m",
  magenta: "\x1b[35m",
  cyan: "\x1b[36m",
};

function log(message, color = "reset") {
  console.log(`${colors[color]}${message}${colors.reset}`);
}

function showHelp() {
  log("\nğŸ® PipesNow DeckEngine V2 CLI", "cyan");
  log(
    "Sistema de pipelines com User Management e Stripe Integration\n",
    "bright"
  );

  log("Comandos disponÃ­veis:", "yellow");
  log("  create <nome>     ğŸ“ Criar novo deck (arquivo .deck.js)", "green");
  log("  run <deck>        âš”ï¸  Executar deck existente", "green");
  log("  list              ğŸ“‹ Listar decks disponÃ­veis", "green");
  log("  health            ğŸ¥ Verificar saÃºde do sistema", "green");
  log("  demo              ğŸ¯ Executar demonstraÃ§Ã£o", "green");
  log("  version           ğŸ“Š Mostrar versÃ£o", "green");
  log("  help              â“ Mostrar esta ajuda", "green");

  log("\nTemplates especiais:", "yellow");
  log("  create-user-deck <nome>     ğŸ‘¤ Template User Management", "magenta");
  log(
    "  create-stripe-deck <nome>   ğŸ’³ Template Stripe Integration",
    "magenta"
  );

  log("\nExemplos:", "yellow");
  log("  deck-engine create meu-pipeline", "blue");
  log("  deck-engine create-user-deck user-management", "blue");
  log("  deck-engine create-stripe-deck stripe-payments", "blue");
  log("  deck-engine run meu-pipeline", "blue");

  log(
    "\nğŸƒ Conceitos: Deck=Pipeline, Card=Step, Match=ExecuÃ§Ã£o, Arena=Queue\n"
  );
}

function createDeckTemplate(name, type = "basic") {
  let template;

  if (type === "user") {
    template = createUserManagementTemplate(name);
  } else if (type === "stripe") {
    template = createStripeTemplate(name);
  } else {
    template = createBasicTemplate(name);
  }

  const filename = `${name}.deck.js`;
  fs.writeFileSync(filename, template);
  log(`âœ… Deck criado: ${filename}`, "green");
  log(`ğŸ’¡ Execute: deck-engine run ${name}`, "yellow");
}

function createBasicTemplate(name) {
  return `/**
 * ğŸ´ Deck: ${name}
 * Criado automaticamente pelo DeckEngine V2 CLI
 */

const DeckEngine = require('pipesnow-deck-engine');

// Criar engine V2
const engine = new DeckEngine({ version: 'v2' });

// Criar deck "${name}"
const deck = engine.createDeck('${name}', {
  concurrency: 3,
  timeout: 30000,
  retryDelay: 1000
});

// ğŸ¯ Adicionar cards (etapas do pipeline)
deck
  .addCard('inicio', async (context) => {
    console.log('ğŸš€ Iniciando processamento...');
    return { ...context, started: true, timestamp: new Date() };
  })
  
  .addCard('processar', async (context) => {
    console.log('âš™ï¸ Processando dados...');
    // Simular processamento
    await new Promise(resolve => setTimeout(resolve, 1000));
    return { ...context, processed: true, data: 'resultado-exemplo' };
  })
  
  .addCard('finalizar', async (context) => {
    console.log('âœ… Finalizando...');
    return { 
      ...context, 
      completed: true, 
      duration: Date.now() - context.timestamp.getTime() 
    };
  });

// Exportar para uso CLI ou require
module.exports = { engine, deck };

// Se executado diretamente
if (require.main === module) {
  async function executar() {
    try {
      console.log('ğŸ® Executando deck "${name}"...');
      const resultado = await engine.playMatch('${name}', {
        context: { nome: '${name}', criado: new Date() }
      });
      
      console.log('ğŸ‰ Sucesso!', resultado);
    } catch (error) {
      console.error('âŒ Erro:', error.message);
      process.exit(1);
    }
  }
  
  executar();
}
`;
}

function createUserManagementTemplate(name) {
  return `/**
 * ğŸ‘¤ User Management Deck: ${name}
 * Template para gestÃ£o de usuÃ¡rios com Clerk/Auth
 */

const DeckEngine = require('pipesnow-deck-engine');

// Criar engine V2
const engine = new DeckEngine({ version: 'v2' });

// Criar deck de User Management
const deck = engine.createDeck('${name}', {
  concurrency: 2,
  timeout: 30000
});

// ğŸ‘¤ User Management Pipeline
deck
  .addCard('validate-user-data', async (context) => {
    console.log('ğŸ” Validando dados do usuÃ¡rio...');
    
    const { email, name, metadata } = context;
    
    if (!email || !email.includes('@')) {
      throw new Error('Email invÃ¡lido');
    }
    
    if (!name || name.length < 2) {
      throw new Error('Nome deve ter pelo menos 2 caracteres');
    }
    
    return {
      ...context,
      validated: true,
      sanitizedData: {
        email: email.toLowerCase().trim(),
        name: name.trim(),
        metadata: metadata || {}
      }
    };
  })
  
  .addCard('check-existing-user', async (context) => {
    console.log('ğŸ‘¥ Verificando usuÃ¡rio existente...');
    
    // Simular busca no Clerk/Database
    const userExists = Math.random() > 0.7; // 30% chance de existir
    
    if (userExists && context.operation === 'create') {
      throw new Error('UsuÃ¡rio jÃ¡ existe com este email');
    }
    
    return {
      ...context,
      userExists,
      userId: userExists ? \`user_\${Date.now()}\` : null
    };
  })
  
  .addCard('sync-with-auth-provider', async (context) => {
    console.log('ğŸ” Sincronizando com provedor de autenticaÃ§Ã£o...');
    
    // Simular sync com Clerk
    const authProviderData = {
      clerkId: \`clerk_\${Date.now()}\`,
      emailVerified: true,
      lastSignIn: new Date().toISOString(),
      publicMetadata: context.sanitizedData.metadata
    };
    
    await new Promise(resolve => setTimeout(resolve, 500));
    
    return {
      ...context,
      authProvider: authProviderData,
      synced: true
    };
  })
  
  .addCard('update-user-database', async (context) => {
    console.log('ğŸ’¾ Atualizando database de usuÃ¡rios...');
    
    // Simular operaÃ§Ã£o no database
    const userData = {
      id: context.userId || \`user_\${Date.now()}\`,
      ...context.sanitizedData,
      clerkId: context.authProvider.clerkId,
      status: 'active',
      createdAt: new Date().toISOString(),
      updatedAt: new Date().toISOString()
    };
    
    await new Promise(resolve => setTimeout(resolve, 300));
    
    return {
      ...context,
      userData,
      saved: true
    };
  })
  
  .addCard('send-welcome-notification', async (context) => {
    console.log('ğŸ“§ Enviando notificaÃ§Ã£o de boas-vindas...');
    
    // Simular envio de email
    const notification = {
      to: context.sanitizedData.email,
      subject: 'Bem-vindo!',
      template: 'welcome',
      data: {
        name: context.sanitizedData.name,
        userId: context.userData.id
      },
      sent: true,
      sentAt: new Date().toISOString()
    };
    
    await new Promise(resolve => setTimeout(resolve, 200));
    
    return {
      ...context,
      notification,
      completed: true
    };
  });

// Exportar
module.exports = { engine, deck };

// Executar se chamado diretamente
if (require.main === module) {
  async function executarUserManagement() {
    try {
      console.log('ğŸ‘¤ Executando User Management Pipeline...');
      
      // Dados de exemplo
      const userData = {
        email: 'novo.usuario@exemplo.com',
        name: 'Novo UsuÃ¡rio',
        operation: 'create',
        metadata: {
          source: 'registration_form',
          plan: 'free'
        }
      };
      
      const resultado = await engine.playMatch('${name}', userData);
      
      console.log('ğŸ‰ Pipeline de usuÃ¡rio concluÃ­do!');
      console.log('ğŸ“Š Resultado:', JSON.stringify(resultado, null, 2));
      
    } catch (error) {
      console.error('âŒ Erro no User Management:', error.message);
      process.exit(1);
    }
  }
  
  executarUserManagement();
}
`;
}

function createStripeTemplate(name) {
  return `/**
 * ğŸ’³ Stripe Integration Deck: ${name}
 * Template para processamento de pagamentos e produtos
 */

const DeckEngine = require('pipesnow-deck-engine');

// Criar engine V2
const engine = new DeckEngine({ version: 'v2' });

// Criar deck de Stripe Integration
const deck = engine.createDeck('${name}', {
  concurrency: 1, // Pagamentos em sequÃªncia por seguranÃ§a
  timeout: 45000  // Timeout maior para API calls
});

// ğŸ’³ Stripe Payment Pipeline
deck
  .addCard('validate-payment-data', async (context) => {
    console.log('ğŸ” Validando dados de pagamento...');
    
    const { productId, priceId, customerId, quantity = 1 } = context;
    
    if (!productId) throw new Error('Product ID Ã© obrigatÃ³rio');
    if (!priceId) throw new Error('Price ID Ã© obrigatÃ³rio');
    if (!customerId) throw new Error('Customer ID Ã© obrigatÃ³rio');
    if (quantity < 1) throw new Error('Quantidade deve ser maior que 0');
    
    return {
      ...context,
      validated: true,
      paymentData: {
        productId,
        priceId,
        customerId,
        quantity: parseInt(quantity)
      }
    };
  })
  
  .addCard('fetch-stripe-product', async (context) => {
    console.log('ğŸ“¦ Buscando produto no Stripe...');
    
    // Simular busca no Stripe
    const product = {
      id: context.paymentData.productId,
      name: 'Produto Exemplo',
      description: 'DescriÃ§Ã£o do produto',
      active: true,
      metadata: {
        category: 'digital',
        plan_type: 'subscription'
      }
    };
    
    await new Promise(resolve => setTimeout(resolve, 500));
    
    if (!product.active) {
      throw new Error('Produto nÃ£o estÃ¡ ativo');
    }
    
    return {
      ...context,
      product
    };
  })
  
  .addCard('fetch-stripe-price', async (context) => {
    console.log('ğŸ’° Buscando preÃ§o no Stripe...');
    
    // Simular busca de preÃ§o
    const price = {
      id: context.paymentData.priceId,
      object: 'price',
      active: true,
      currency: 'brl',
      product: context.paymentData.productId,
      unit_amount: 2999, // R$ 29.99
      recurring: {
        interval: 'month',
        interval_count: 1
      }
    };
    
    await new Promise(resolve => setTimeout(resolve, 300));
    
    if (!price.active) {
      throw new Error('PreÃ§o nÃ£o estÃ¡ ativo');
    }
    
    return {
      ...context,
      price,
      totalAmount: price.unit_amount * context.paymentData.quantity
    };
  })
  
  .addCard('verify-customer', async (context) => {
    console.log('ğŸ‘¤ Verificando cliente no Stripe...');
    
    // Simular busca do customer
    const customer = {
      id: context.paymentData.customerId,
      email: 'cliente@exemplo.com',
      name: 'Cliente Exemplo',
      default_source: 'card_exemplo123',
      subscriptions: {
        data: []
      }
    };
    
    await new Promise(resolve => setTimeout(resolve, 400));
    
    return {
      ...context,
      customer
    };
  })
  
  .addCard('create-payment-intent', async (context) => {
    console.log('ğŸ’³ Criando Payment Intent...');
    
    // Simular criaÃ§Ã£o do Payment Intent
    const paymentIntent = {
      id: \`pi_\${Date.now()}\`,
      object: 'payment_intent',
      amount: context.totalAmount,
      currency: context.price.currency,
      customer: context.customer.id,
      status: 'requires_payment_method',
      client_secret: \`pi_\${Date.now()}_secret_exemplo\`,
      metadata: {
        product_id: context.product.id,
        price_id: context.price.id,
        quantity: context.paymentData.quantity.toString()
      }
    };
    
    await new Promise(resolve => setTimeout(resolve, 600));
    
    return {
      ...context,
      paymentIntent
    };
  })
  
  .addCard('simulate-payment-confirmation', async (context) => {
    console.log('âœ… Simulando confirmaÃ§Ã£o de pagamento...');
    
    // Simular webhook do Stripe
    const isSuccessful = Math.random() > 0.1; // 90% de sucesso
    
    if (!isSuccessful) {
      throw new Error('Pagamento foi recusado pelo banco');
    }
    
    const confirmedPayment = {
      ...context.paymentIntent,
      status: 'succeeded',
      charges: {
        data: [{
          id: \`ch_\${Date.now()}\`,
          amount: context.totalAmount,
          currency: context.price.currency,
          paid: true,
          receipt_url: \`https://pay.stripe.com/receipts/exemplo\`
        }]
      }
    };
    
    await new Promise(resolve => setTimeout(resolve, 800));
    
    return {
      ...context,
      paymentConfirmed: true,
      confirmedPayment,
      receiptUrl: confirmedPayment.charges.data[0].receipt_url
    };
  })
  
  .addCard('update-user-subscription', async (context) => {
    console.log('ğŸ“‹ Atualizando assinatura do usuÃ¡rio...');
    
    // Simular atualizaÃ§Ã£o no database local
    const subscription = {
      userId: context.customer.id,
      productId: context.product.id,
      priceId: context.price.id,
      status: 'active',
      currentPeriodStart: new Date().toISOString(),
      currentPeriodEnd: new Date(Date.now() + 30 * 24 * 60 * 60 * 1000).toISOString(), // +30 dias
      paymentIntentId: context.confirmedPayment.id
    };
    
    await new Promise(resolve => setTimeout(resolve, 300));
    
    return {
      ...context,
      subscription,
      updated: true
    };
  })
  
  .addCard('send-purchase-confirmation', async (context) => {
    console.log('ğŸ“§ Enviando confirmaÃ§Ã£o de compra...');
    
    // Simular envio de email de confirmaÃ§Ã£o
    const confirmation = {
      to: context.customer.email,
      subject: 'Compra confirmada!',
      template: 'purchase_confirmation',
      data: {
        customerName: context.customer.name,
        productName: context.product.name,
        amount: context.totalAmount / 100, // Converter centavos
        currency: context.price.currency.toUpperCase(),
        receiptUrl: context.receiptUrl
      },
      sent: true,
      sentAt: new Date().toISOString()
    };
    
    await new Promise(resolve => setTimeout(resolve, 400));
    
    return {
      ...context,
      confirmation,
      completed: true
    };
  });

// Exportar
module.exports = { engine, deck };

// Executar se chamado diretamente
if (require.main === module) {
  async function executarStripeIntegration() {
    try {
      console.log('ğŸ’³ Executando Stripe Integration Pipeline...');
      
      // Dados de exemplo de uma compra
      const purchaseData = {
        productId: 'prod_exemplo123',
        priceId: 'price_exemplo456',
        customerId: 'cus_exemplo789',
        quantity: 1
      };
      
      const resultado = await engine.playMatch('${name}', purchaseData);
      
      console.log('ğŸ‰ Pipeline de pagamento concluÃ­do!');
      console.log('ğŸ“Š Resultado:', JSON.stringify(resultado, null, 2));
      
    } catch (error) {
      console.error('âŒ Erro no Stripe Integration:', error.message);
      process.exit(1);
    }
  }
  
  executarStripeIntegration();
}
`;
}

function listDecks() {
  log("ğŸ“‹ Decks disponÃ­veis:", "cyan");

  const files = fs
    .readdirSync(".")
    .filter((file) => file.endsWith(".deck.js"))
    .map((file) => file.replace(".deck.js", ""));

  if (files.length === 0) {
    log("  Nenhum deck encontrado", "yellow");
    log("  ğŸ’¡ Crie um com: deck-engine create meu-deck", "blue");
    log(
      "  ğŸ‘¤ Template User: deck-engine create-user-deck user-mgmt",
      "magenta"
    );
    log(
      "  ğŸ’³ Template Stripe: deck-engine create-stripe-deck payments",
      "magenta"
    );
  } else {
    files.forEach((deck) => {
      log(`  ğŸ´ ${deck}`, "green");
    });
  }
}

async function runDeck(deckName) {
  const filename = `${deckName}.deck.js`;

  if (!fs.existsSync(filename)) {
    log(`âŒ Deck nÃ£o encontrado: ${filename}`, "red");
    log("ğŸ’¡ Crie com: deck-engine create " + deckName, "yellow");
    process.exit(1);
  }

  try {
    log(`ğŸ® Executando deck: ${deckName}`, "cyan");
    require(path.resolve(filename));
  } catch (error) {
    log(`âŒ Erro ao executar deck: ${error.message}`, "red");
    process.exit(1);
  }
}

function showHealth() {
  try {
    const engine = new DeckEngine({ version: "v2" });
    const health = engine.healthCheck();

    log("ğŸ¥ Status do Sistema V2:", "cyan");
    log(
      `  Status: ${health.status}`,
      health.status === "healthy" ? "green" : "red"
    );
    log(`  VersÃ£o: ${health.version}`, "blue");
    log(`  Platform: ${health.platform}`, "blue");
    log(`  Uptime: ${health.uptime}ms`, "blue");
    log(`  Domains: ${health.system?.domains?.total || 0}`, "blue");
    log(`  Decks: ${health.system?.decks?.total || 0}`, "blue");
  } catch (error) {
    log(`âŒ Erro no health check: ${error.message}`, "red");
    process.exit(1);
  }
}

async function runDemo() {
  log("ğŸ¯ Executando demonstraÃ§Ã£o V2...", "cyan");

  try {
    const engine = new DeckEngine({ version: "v2" });

    const demo = engine.createDeck("demo-cli-v2", {
      concurrency: 1,
    });

    demo
      .addCard("saudar", async (context) => {
        log("ğŸ‘‹ OlÃ¡ do DeckEngine V2 CLI!", "green");
        return { ...context, saudacao: true };
      })
      .addCard("demonstrar-domains", async (context) => {
        log("ğŸ° Demonstrando sistema de domains...", "yellow");
        const domains = engine.getInstalledDomains();
        log(`ğŸ“Š Domains instalados: ${domains.length}`, "blue");
        return { ...context, domains };
      })
      .addCard("finalizar", async (context) => {
        log("ğŸ‰ Demo V2 concluÃ­da!", "green");
        return { ...context, concluido: true };
      });

    const resultado = await engine.playMatch("demo-cli-v2", {
      demo: true,
      version: "v2",
    });

    log("\nğŸ“Š Resultado V2:", "cyan");
    console.log(JSON.stringify(resultado, null, 2));
  } catch (error) {
    log(`âŒ Erro na demo: ${error.message}`, "red");
    process.exit(1);
  }
}

// Processar argumentos
const args = process.argv.slice(2);
const command = args[0];
const param = args[1];

async function main() {
  switch (command) {
    case "create":
      if (!param) {
        log("âŒ Nome do deck Ã© obrigatÃ³rio", "red");
        log("ğŸ’¡ Uso: deck-engine create <nome>", "yellow");
        process.exit(1);
      }
      createDeckTemplate(param, "basic");
      break;

    case "create-user-deck":
      if (!param) {
        log("âŒ Nome do deck Ã© obrigatÃ³rio", "red");
        log("ğŸ’¡ Uso: deck-engine create-user-deck <nome>", "yellow");
        process.exit(1);
      }
      createDeckTemplate(param, "user");
      break;

    case "create-stripe-deck":
      if (!param) {
        log("âŒ Nome do deck Ã© obrigatÃ³rio", "red");
        log("ğŸ’¡ Uso: deck-engine create-stripe-deck <nome>", "yellow");
        process.exit(1);
      }
      createDeckTemplate(param, "stripe");
      break;

    case "run":
      if (!param) {
        log("âŒ Nome do deck Ã© obrigatÃ³rio", "red");
        log("ğŸ’¡ Uso: deck-engine run <nome>", "yellow");
        process.exit(1);
      }
      await runDeck(param);
      break;

    case "list":
      listDecks();
      break;

    case "health":
      showHealth();
      break;

    case "demo":
      await runDemo();
      break;

    case "version":
      const { version } = require("../package.json");
      log(`ğŸ® DeckEngine V2 v${version}`, "cyan");
      break;

    case "help":
    case "--help":
    case "-h":
      showHelp();
      break;

    default:
      if (!command) {
        showHelp();
      } else {
        log(`âŒ Comando desconhecido: ${command}`, "red");
        log("ğŸ’¡ Use: deck-engine help", "yellow");
        process.exit(1);
      }
  }
}

main().catch((error) => {
  log(`âŒ Erro inesperado: ${error.message}`, "red");
  process.exit(1);
});
